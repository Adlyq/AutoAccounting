<resources>
    <declare-styleable name="WaveTextView">
        <attr name="waveColor" format="color" />
        <attr name="waveAmplitude" format="dimension" />
        <attr name="waveFrequency" format="float" />
        <attr name="waveSpeed" format="float" />
        <attr name="waveBottomPadding" format="float" />
    </declare-styleable>
    <declare-styleable name="IconView">
        <attr name="iconSrc" format="reference"/>
        <attr name="iconTintEnabled" format="boolean"/>
        <attr name="text" format="string"/>
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="iconSize" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="StatusPage">
        <attr name="innerHeight" format="string"/>
    </declare-styleable>
</resources>